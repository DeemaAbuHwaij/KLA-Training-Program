@Library('shared-lib') _

pipeline {
    agent any

    parameters {
        string(name: 'environment', defaultValue: 'dev', description: 'Environment to deploy to')
        string(name: 'tag', defaultValue: 'latest', description: 'Docker image tag')
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building project...'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }

        stage('Deploy') {
            steps {
                deploy(environment: params.environment, tag: params.tag)
            }
        }
    }
}